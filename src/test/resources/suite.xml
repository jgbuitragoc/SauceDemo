<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="sauceDemo">
    <parameter name="url" value="https://www.saucedemo.com"/>
    <parameter name="browser" value="chrome"/>
    <parameter name="username" value="standard_user"/>
    <parameter name="password" value="secret_sauce"/>
    <parameter name="firstname" value="Juan"/>
    <parameter name="lastname" value="Calle"/>
    <parameter name="zipcode" value="012345"/>
    <test name="Login">
        <classes>
            <class name="tests.LoginTest"/>
        </classes>
    </test>
    <test name="Purchase a product">
        <classes>
            <class name="tests.PurchaseAProductTest"/>
        </classes>
    </test>
    <test name="Remove products">
        <classes>
            <class name="tests.RemoveProductsFromCartTest"/>
        </classes>
    </test>
    <test name="Logout">
        <classes>
            <class name="tests.LogoutTest"/>
        </classes>
    </test>
</suite>

